<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:paddingStart="48dp"
    android:paddingTop="40dp"
    android:paddingEnd="48dp"
    android:paddingBottom="24dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_setup_card">

        <ScrollView
            android:id="@+id/content_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="56dp"
                android:paddingTop="40dp"
                android:paddingEnd="56dp"
                android:paddingBottom="40dp">

                <TextView
                    android:id="@+id/text_adb_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_bold"
                    android:text="@string/adb_title"
                    android:textColor="#111111"
                    android:textSize="30sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bg_setup_bullet" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:fontFamily="@font/opensans_bold"
                            android:lineSpacingExtra="1dp"
                            android:text="@string/adb_bullet_network"
                            android:textColor="#111111"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bg_setup_bullet" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:fontFamily="@font/opensans_bold"
                            android:lineSpacingExtra="1dp"
                            android:text="@string/adb_bullet_terminal"
                            android:textColor="#111111"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bg_setup_bullet" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:fontFamily="@font/opensans_bold"
                            android:lineSpacingExtra="1dp"
                            android:text="@string/adb_bullet_command"
                            android:textColor="#111111"
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/opensans_bold"
                    android:text="@string/adb_step1_title"
                    android:textColor="#111111"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/opensans_semibold"
                    android:lineSpacingExtra="1dp"
                    android:text="@string/adb_step1_body"
                    android:textColor="#222222"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="@string/adb_step1_pair_label"
                    android:textColor="#222222"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/text_wireless_pair_command"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/bg_adb_command"
                    android:fontFamily="monospace"
                    android:padding="14dp"
                    android:text="@string/adb_wireless_pair_command"
                    android:textColor="#F5F5F5"
                    android:textIsSelectable="true"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/opensans_semibold"
                    android:lineSpacingExtra="1dp"
                    android:text="@string/adb_step1_enter_code_label"
                    android:textColor="#222222"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="@string/adb_step1_connect_label"
                    android:textColor="#222222"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/text_wireless_connect_command"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/bg_adb_command"
                    android:fontFamily="monospace"
                    android:padding="14dp"
                    android:text="@string/adb_wireless_connect_command"
                    android:textColor="#F5F5F5"
                    android:textIsSelectable="true"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/opensans_bold"
                    android:text="@string/adb_step2_title"
                    android:textColor="#111111"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="@string/adb_step2_body"
                    android:textColor="#222222"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/text_commands"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_adb_command"
                    android:fontFamily="monospace"
                    android:padding="14dp"
                    android:textColor="#F5F5F5"
                    android:textIsSelectable="true"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/opensans_semibold"
                    android:lineSpacingExtra="1dp"
                    android:text="@string/adb_finish_note"
                    android:textColor="#222222"
                    android:textSize="14sp" />

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

</FrameLayout>
