<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_setup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setup_title"
            android:textColor="@color/ssaver_text_primary"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/text_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/ssaver_text_secondary"
            android:textSize="14sp" />

        <!-- Toggle Manual Entry Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_toggle_manual"
            style="@style/Widget.SSaver.Button.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/setup_button_manual" />

        <!-- Manual Entry Card (Hidden by default) -->
        <LinearLayout
            android:id="@+id/card_manual_entry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_card"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/setup_manual_entry_title"
                android:textColor="@color/ssaver_text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_public_album_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="@string/setup_album_url_hint"
                android:inputType="textUri"
                android:nextFocusDown="@id/edit_public_album_password"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/edit_public_album_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="@string/setup_album_password_hint"
                android:inputType="textPassword"
                android:nextFocusDown="@id/button_save"
                android:nextFocusUp="@id/edit_public_album_url"
                tools:ignore="Autofill" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:nextFocusUp="@id/edit_public_album_password"
                android:text="@string/setup_save" />

        </LinearLayout>

        <!-- QR Setup Card (Primary) -->
        <LinearLayout
            android:id="@+id/card_qr_setup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_card"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/image_qr"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/text_setup_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="@color/ssaver_text_primary"
                android:textIsSelectable="true"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_pairing_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/ssaver_text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_setup_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/ssaver_text_secondary"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
