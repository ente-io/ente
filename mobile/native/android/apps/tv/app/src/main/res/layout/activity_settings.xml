<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/settings_logo"
                android:layout_width="94dp"
                android:layout_height="66dp"
                android:layout_gravity="start|top"
                android:layout_marginStart="48dp"
                android:layout_marginTop="24dp"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:src="@drawable/ente_photos_logo" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/row_change_album"
                style="@style/Widget.EntePhotos.SettingsRowContainer">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/row_change_album_title"
                        style="@style/Widget.EntePhotos.SettingsRowTitle"
                        android:text="@string/pref_change_album" />

                    <TextView
                        android:id="@+id/row_change_album_subtitle"
                        style="@style/Widget.EntePhotos.SettingsRowSubtitle"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/row_set_screensaver_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:id="@+id/divider_set_screensaver"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/ssaver_settings_divider_subtle" />

                <LinearLayout
                    android:id="@+id/row_set_screensaver"
                    style="@style/Widget.EntePhotos.SettingsRowContainer">

                    <TextView
                        android:id="@+id/row_set_screensaver_title"
                        style="@style/Widget.EntePhotos.SettingsRowTitle"
                        android:text="@string/button_set_screensaver" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:id="@+id/divider_shuffle"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/ssaver_settings_divider_subtle" />

                <LinearLayout
                    android:id="@+id/row_shuffle"
                    style="@style/Widget.EntePhotos.SettingsRowContainer">

                    <TextView
                        android:id="@+id/row_shuffle_title"
                        style="@style/Widget.EntePhotos.SettingsRowTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/pref_title_shuffle" />

                    <TextView
                        android:id="@+id/row_shuffle_value"
                        style="@style/Widget.EntePhotos.SettingsRowValue"
                        android:text="@string/settings_toggle_off" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:id="@+id/divider_interval"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/ssaver_settings_divider_subtle" />

                <LinearLayout
                    android:id="@+id/row_interval"
                    style="@style/Widget.EntePhotos.SettingsRowContainer">

                    <TextView
                        android:id="@+id/row_interval_title"
                        style="@style/Widget.EntePhotos.SettingsRowTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/pref_title_slideshow_interval" />

                    <TextView
                        android:id="@+id/row_interval_value"
                        style="@style/Widget.EntePhotos.SettingsRowValue"
                        android:text="@string/ente_album_loading" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:id="@+id/divider_advanced"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/ssaver_settings_divider_subtle" />

                <LinearLayout
                    android:id="@+id/row_advanced"
                    style="@style/Widget.EntePhotos.SettingsRowContainer">

                    <TextView
                        android:id="@+id/row_advanced_title"
                        style="@style/Widget.EntePhotos.SettingsRowTitle"
                        android:text="@string/pref_advanced" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
