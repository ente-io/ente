{
    "name": "ente-web",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "build": "turbo run build && turbo run export",
        "dev": "turbo run dev --parallel",
        "lint": "turbo run lint",
        "albums": "turbo run albums",
        "auth": "turbo run auth",
        "export": "turbo run export",
        "build-analyze": "ANALYZE=true next build",
        "start": "turbo run start",
        "prepare": "husky install"
    },
    "dependencies": {},
    "devDependencies": {
        "eslint": "^8.28.0",
        "husky": "^7.0.1",
        "lint-staged": "^11.1.2",
        "prettier": "2.3.2",
        "turbo": "^1.9.3"
    },
    "standard": {
        "parser": "babel-eslint"
    },
    "workspaces": [
        "packages/*",
        "apps/*"
    ],
    "lint-staged": {
        "apps/**/*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write --ignore-unknown"
        ],
        "packages/**/*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write --ignore-unknown"
        ],
        "**/*.{json,css,scss,md,html,yml,yaml}": [
            "prettier --write --ignore-unknown"
        ]
    }
}
